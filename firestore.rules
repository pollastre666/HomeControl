rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    match /Usuarios/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /Dispositivos/{deviceId} {
      allow read: if request.auth != null;
      allow create: if request.auth != null && request.resource.data.idUsuarioPropietario == request.auth.uid;
      allow update, delete: if request.auth != null && resource.data.idUsuarioPropietario == request.auth.uid;
    }
  }
}
